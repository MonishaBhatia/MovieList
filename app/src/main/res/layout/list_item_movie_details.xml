<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/label_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:gravity="center"
        android:textSize="@dimen/font_16sp"
        tools:text="Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_12dp">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="89dp"
            android:layout_height="135dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout style="@style/linear_layout_horizontal">

                <TextView
                    style="@style/label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_genre" />

                <TextView
                    android:id="@+id/tv_genre"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Comedy, Romance" />


            </LinearLayout>

            <LinearLayout style="@style/linear_layout_horizontal">

                <TextView
                    style="@style/label_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_released_date" />

                <TextView
                    android:id="@+id/tv_released_date"
                    style="@style/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8th April 2017 " />

            </LinearLayout>

            <LinearLayout
                style="@style/linear_layout_horizontal">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:rating="1"
                    style="@style/Base.Widget.AppCompat.RatingBar.Indicator"/>

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    tools:text="9.0"
                    android:layout_gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_26sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_12sp"
                    android:text="/10" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



    <LinearLayout style="@style/linear_layout_horizontal"
        android:layout_marginTop="@dimen/margin_12dp">

        <TextView
            style="@style/label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_plot" />

        <TextView
            android:id="@+id/tv_plot"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ek tha raja, ek thi rani, khatam kahani" />

    </LinearLayout>

    <include layout="@layout/layout_horizontal_divider"/>

</LinearLayout>